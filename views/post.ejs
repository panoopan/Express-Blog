<% if(username){ %>

<!DOCTYPE html>
<html>
  <head>
    <%- include("template/head")%>
  </head>

  <body>
    <%- include("template/navbar") %>

    <div
      class="col-10 col-lg-6 my-5 mx-auto"
      style="
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
      "
    >
      <h1 class="text-center">POST</h1>
      <section class="error">
        <% if(errMessage && errMessage.length > 0) { %>
        <div class="alert alert-danger" role="alert"><%= errMessage %></div>
        <% } %>
      </section>
      <form
        name="article"
        action="/post"
        method="POST"
        class="shadow-lg p-3 pb-5 mb-5 bg-white rounded"
      >
        <div class="form-group">
          Title
          <input
            name="title"
            class="form-control"
            placeholder="請輸入文章標題"
          />
        </div>
        <div class="form-group">
          Tag
          <select
            name="tag"
            class="form-control"
            id="exampleFormControlSelect1"
          >
            <option>生活雜談</option>
            <option>那些貓</option>
            <option>Lego</option>
          </select>
        </div>
        <div class="form-group">
          URL
          <input
            name="thumbnail"
            class="form-control"
            placeholder="請輸入封面圖片網址"
          />
        </div>
        <div class="form-group">
          <textarea name="content" rows="20" class="form-control"></textarea>
        </div>
        <button type="submit" class="btn btn-info float-right">Submit</button>
      </form>
    </div>
    <script>
      CKEDITOR.replace("content", {
        enterMode: CKEDITOR.ENTER_BR,
        shiftEnterMode: CKEDITOR.ENTER_P,
        removeButtons: "PasteFromWord",
      });
    </script>
    <%- include("template/bundle") %>
  </body>
</html>

<% } %>
